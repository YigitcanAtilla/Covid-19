<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Current Global Situation"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="#f3f4f7"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"

        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sick"
                    >

                </ImageView>
                <TextView
                    android:id="@+id/NewConfirmedtxt"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:text="NewConfirmed :"
                    android:textColor="#000"
                    android:textSize="20sp">

                </TextView>

                <TextView
                    android:id="@+id/NewConfirmed"
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:textSize="15sp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sick"
                    >
                </ImageView>

                <TextView
                    android:id="@+id/TotalConfirmedtxt"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:text="TotalConfirmed :"
                    android:textColor="#000"
                    android:textSize="20sp">

                </TextView>

                <TextView
                    android:id="@+id/TotalConfirmed"
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:textSize="15sp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/death"
                    >

                </ImageView>

                <TextView
                    android:id="@+id/NewDeathstxt"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:text="NewDeaths :"
                    android:textColor="#000"
                    android:textSize="20sp">

                </TextView>

                <TextView
                    android:id="@+id/NewDeaths"
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:textSize="15sp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/death"
                    >

                </ImageView>

                <TextView
                    android:id="@+id/TotalDeathstxt"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:text="TotalDeaths :"
                    android:textColor="#000"
                    android:textSize="20sp">

                </TextView>

                <TextView
                    android:id="@+id/TotalDeaths"
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:textSize="15sp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/recovered"
                    >

                </ImageView>

                <TextView
                    android:id="@+id/NewRecoveredtxt"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:text="NewRecovered :"
                    android:textColor="#000"
                    android:textSize="20sp">

                </TextView>

                <TextView
                    android:id="@+id/NewRecovered"
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:textSize="15sp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/recovered"
                    >

                </ImageView>

                <TextView
                    android:id="@+id/TotalRecoveredtxt"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:text="TotalRecovered :"
                    android:textColor="#000"
                    android:textSize="20sp">

                </TextView>

                <TextView
                    android:id="@+id/TotalRecovered"
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:textSize="15sp">

                </TextView>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>